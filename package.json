{
    "name": "{{PROJECT_NAME}}",
    "version": "0.1.0",
    "description": "A GMS 1.4 inspired web game engine and IDE using modern TypeScript, along with some other cool stuff :3",
    "main": "index.js",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build:engine": "esbuild ./packages/engine/src/index.ts --bundle --outfile=exports/engine.js --format=esm",
        "build:ide": "esbuild ./packages/ide/src/index.ts --bundle --outfile=exports/ide.js --format=esm",
        "build": "npm run build:engine && npm run build:ide",
        "watch": "npm run build -- --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+{{PROJECT_GIT}}"
    },
    "keywords": [
        "game",
        "papercrane",
        "gamemaker",
        "gms",
        "typescript",
        "webgl",
        "ide"
    ],
    "author": "{{AUTHOR}} {{AUTHOR_MAIL}}",
    "license": "GPL-3.0",
    "bugs": {
        "url": "{{PROJECT_GIT}}/issues"
    },
    "homepage": "{{PROJECT_GIT}}#readme",
    "workspaces": [
        "./packages/*"
    ],
    "devDependencies": {
        "esbuild": "^0.27.2",
        "typescript": "^5.9.3"
    }
}
